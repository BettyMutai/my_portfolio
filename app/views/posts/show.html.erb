<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<div class="main">
  <% if @post.comments.any? %>
  <h4>Comments</h4>

  <%= render @post.comments %>
<% else %>
  <p>No comments yet!</p>
  <% end %>
</div>

<br>
<%= link_to 'Add a comment', new_post_comment_path(@post), id: 'new_link', remote: true %>
