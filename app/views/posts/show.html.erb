<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>
<% if @post.comments.any? %>
<h4>Comments</h4>
  <% @post.comments.each do |comment| %>
  <p><%= comment.content %></p>
  <% end %>
<% else %>
<p>No comments yet!</p>
<% end %>
<br>
<%= link_to 'Add a comment', new_post_comment_path(@post) %>
