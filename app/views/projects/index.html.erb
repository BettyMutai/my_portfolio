<p id="notice"><%= notice %></p>

<h1>Projects</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
    <%= link_to project.name, skill_project_path(@skill, project) %>
      <tr>
        <td><%= link_to 'Edit', edit_skill_project_path(@skill, project) %></td>
        <td><%= link_to 'Destroy', skill_project_path(@skill, project), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_skill_project_path %>
