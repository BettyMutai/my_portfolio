<div class="container">
<%= form_for @recommendation, remote: true do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, class:"form-control"%><br>
    <%= form.label :detail %>
    <%= form.text_area :detail, class:"form-control" %><br>
    <%= form.label :rating %>
    <%= form.number_field :rating, min:4, max:10, required: true %><br>
  </div>

  <div class="actions margin-bottom">
    <%= form.submit class:"btn btn-success" %>
  </div>
<% end %>
</div>
