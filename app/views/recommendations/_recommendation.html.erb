<div class="container">
<% @recommendations.each do |recommendation| %>
<div class="panel-group">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">
        <a data-toggle="collapse" href="#<%= recommendation.id %>"><%= recommendation.name %></a>
      </h4>
    </div>
    <div id="<%= recommendation.id %>" class="panel-collapse collapse">
      <ul class="list-group">
        <li class="list-group-item"><%= recommendation.detail %></li>
        <li class="list-group-item">Rating <%= recommendation.rating %></li>
      </ul>
    </div>
  </div>
</div>
<% end %>
</div>